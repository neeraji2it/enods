        <div class="icon-shopping">Shopping Cart Is Empty</div>
      </div>
      <div id="navigation">
        <ul class="list-media">
          <li class="icon-facebook"><%= link_to "facebook", "" %></li>
          <li class="icon-twitter"><%= link_to "twitter", "" %></li>
          <li class="icon-blogger"><%= link_to "blogger", "" %></li>
          <li class="icon-googlePlus"><%= link_to "google plus", "" %></li>
          <li class="icon-pinterest"><%= link_to "pinterest", "" %></li>
          <li class="icon-youtube"><%= link_to "you tube", "" %></li>
        </ul>
        <nav>
          <ul>
            <li><%= link_to "Sign up", "", :class => 'lin-signup' %></li>
            <li><%= link_to_function "Sign In", "login()" %></li>
            <li class="parent"><a title="Categories" href="#">Categories</a>
              <ul class="submenu">
                <% Category.all.each do |category| %>
                  <li><%= link_to category.name, category_path(:categories => category.id) %></li>
