<% for review in @reviews %>
  <table width="100%;" style="line-height: 25px;">
    <tr>
      <td>
        <div id="star-rating">
          <div class="star-<%=h review.rating %> rating"></div>
        </div>
      </td>
      <td></td>
      <td><b><%= review.name %></b></td>
    </tr>
    <tr>
      <td>
        <b><%= review.title %></b> - <%= review.created_at.strftime("%d/%m/%Y") %>
      </td>
    </tr>
    <tr>
      <td>
        <p style="width: 800px;"><%= review.message %></p>
      </td>
    </tr>
  </table>
<% end %>
<hr />
<div style="position: relative; left: 930px; width: 75px;">
  <%= will_paginate @reviews, :param_name => 'review_page', :page_links => false, :previous_label => "PREV", :next_label => "NEXT" %>
</div>
<hr />
<script>
  $(function() {
    $(".pagination a").click(function() {
      $.getScript(this.href);
      return false;
    });
  });
</script>