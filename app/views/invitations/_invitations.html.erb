<table border="1" width="100%">
  <tr style="text-align: center;">
    <th>ID</th>
    <th>Email</th>
    <th>Posted On</th>
    <th>Status</th>
  </tr>
  <% for invitation in @invitations %>
    <tr style="text-align: center;">
      <td><%= invitation.id %></td>
      <td><%= invitation.email %></td>
      <td><%= invitation.created_at.strftime("%d/%m/%Y")%></td>
      <td><%= invitation.status %></td>
    </tr>
  <% end %>
</table>
<div style="float: right">
  <%= will_paginate @invitations, :param_name => 'invitation_page', :previous_label => "PREV", :next_label => "NEXT", :page_links => false %>
</div>
<script>
  $(function(){
    $('.pagination a').click(function(){
      $.getScript(this.href);
      return false;
    });
  });
</script>