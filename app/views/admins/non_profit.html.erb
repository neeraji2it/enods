<h1 class="icon-nonProfitManagement"><span>Non-Profit Management</span></h1>
<div class="tablebox table-orderHistory">
  <div class="row">
    <div class="column">ID</div>
    <div class="column">Name</div>
    <div class="column">Email</div>
    <div class="column">Phone</div>
    <div class="column">Total Earning</div>
    <div class="column">Pending</div>
    <div class="column">Option</div>
  </div>
  <% @users.each_with_index do |user, index| %>
    <div class="row">
      <div class="column"><%= index+1 %></div>
      <div class="column"><%= user.username %></div>
      <div class="column"><%= user.email %></div>
      <div class="column"><%= user.phone.present? ? user.phone : "-" %></div>
      <div class="column">$699.00</div>
      <div class="column">$400</div>
      <div class="column last">
        <%= user.confirmation_token.nil? ? (link_to "<input class='btn-deActivate' type='submit' title='De Activate' value='De Activate' />".html_safe, {:controller => 'users', :action => 'update', :id => user.id, :role => user.role, :active => 'Deactive'}, :method => :put, :style => 'text-decoration: none;') : (link_to "<input class='btn-activate' type='submit' title='Activate' value='Activate' />".html_safe, {:controller => 'users', :action => 'update', :id => user.id, :role => user.role, :active => 'Active'}, :method => :put, :style => 'text-decoration: none;')%>
      </div>
    </div>
  <% end %>
</div>
