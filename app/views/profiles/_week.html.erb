<script type="text/javascript" charset="utf-8">
  $(function() {
    Highcharts.setOptions({
      colors: ['#ECA693', '#B1C4F3']
    });
    new Highcharts.Chart({
      chart: {
        renderTo: "container"
      },
      title: {
        text: ""
      },
      xAxis: {
        type: "datetime"
      },
      yAxis: {
        title: {
          text: "Dollars"
        }
      },
      tooltip: {
        formatter: function() {
          return Highcharts.dateFormat("%B %e, %Y", this.x) + ': ' +
                  "$" + Highcharts.numberFormat(this.y, 2);
        }
      },
      series: [
<% { "Visits" => Product.where("user_id = #{current_user.id} and status = 'confirmed'"), "Sales" => Order.where("receiver_id = #{current_user.id} and status = 'Success'") }.each do |name, orders| %>
          {
            name: "<%= name %>",
            pointInterval: <%= 1.day * 1000 %>,
            pointStart: <%= params[:week] == '1y' ? (1.year.ago.to_i * 1000) : (params[:week] == '5m' ? (5.months.ago.to_i * 1000) : (params[:week] == '3m' ? (3.months.ago.to_i * 1000): (params[:week] == '5d' ? (5.days.ago.to_i * 1000) : (params[:week] == '1d' ? ((Time.now.beginning_of_day+1.day).to_i * 1000) : (params[:week] == 'this_month' ? ((Time.now.beginning_of_month+1.day).to_i * 1000) : (params[:week] == 'this_week' ? ((Time.now.beginning_of_week+1.day).to_i * 1000) : (params[:week] == '30_days' ? (1.month.ago.to_i * 1000) : (params[:week] == 'all' ? (1.year.ago.to_i * 1000) : (1.week.ago.to_i * 1000))))))))) %>,
            data: <%= params[:week] == '1y' ? ("#{orders_chart_series(orders, 1.year.ago)}") : (params[:week] == '5m' ? ("#{orders_chart_series(orders, 5.months.ago)}") : (params[:week] == '3m' ? ("#{orders_chart_series(orders, 3.months.ago)}") : (params[:week] == '5d' ? ("#{orders_chart_series(orders, 5.days.ago)}"): (params[:week] == '1d' ? ("#{orders_chart_series(orders, Time.now.beginning_of_day)}") : (params[:week] == 'this_month' ? ("#{orders_chart_series(orders, Time.now.beginning_of_month)}") : (params[:week] == 'this_week' ? ("#{orders_chart_series(orders, Time.now.beginning_of_week)}") : (params[:week] == '30_days' ? ("#{orders_chart_series(orders, 1.month.ago)}") : (params[:week] == 'all' ? ("#{orders_chart_series(orders, 1.year.ago)}") : ("#{orders_chart_series(orders, 1.week.ago)}"))))))))) %>
          },
<% end %>
      ]
    });
  });
</script>