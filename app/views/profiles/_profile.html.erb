<%= form_for @user, :url => profile_update_profile_path(@user), :method => 'PUT' do |f| %>
  <ul style="width: 370px;margin-left: 85px;">
    <% @user.errors.full_messages.each_with_index do |msg, index| %>
      <li style="color: red;line-height: 20px;"><%= index+1 %>. <%= msg %></li>
    <% end %>
  </ul>
  <% if (@user.role == "buyer" or @user.role == 'non-profit') %>
    <div class="frow">
      <div>First Name</div>
      <div><%= f.text_field :first_name %></div>
    </div>
    <div class="frow">
      <div>Last Name</div>
      <div><%= f.text_field :last_name %></div>
    </div>
    <div class="frow">
      <div>Gender</div>
      <div>
        <%= f.radio_button :gender, "Male", :checked => true %>Male
        <%= f.radio_button :gender , "Female"%>Female
      </div>
    </div>
  <% end %>
  <% if (@user.role == "buyer") %>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <div class="frow">
      <div>Birthday</div>
      <div><%= f.text_field :date_of_birth, :value => (@user.date_of_birth ? @user.date_of_birth.strftime("%d-%m-%Y") : ""), :id => 'calendar' %></div>
    </div>

    <div class="frow">
      <div>City</div>
      <div><%= f.text_field :city %></div>
    </div>

    <div class="frow">
      <div>Country</div>
      <div><%= f.country_select :country %></div>
    </div>

    <div class="frow">
      <div>Zip</div>
      <div><%= f.text_field :zip %></div>
    </div>

  <% elsif @user.role == 'seller' %>

    <div class="frow">
      <div>Business Name</div>
      <div><%= f.text_field :business_name %></div>
    </div>

    <div class="frow">
      <div>Business Address</div>
      <div><%= f.text_field :business_address %></div>
    </div>
    <div class="frow">
      <div>Website</div>
      <div><%= f.text_field :website_url %></div>
    </div>
    <div class="frow">
      <div>Paypal Id</div>
      <div><%= f.text_field :paypal_id %></div>
    </div>
    <div class="frow">
      <div>Other Info</div>
      <div><%= f.text_field :other_info %></div>
    </div>
  <% end %>
  <div class="frow">
    <div>Email Id</div>
    <div><%= f.text_field :email, :readonly => true %></div>
  </div>
  <div class="frow">
    <div>Phone</div>
    <div><%= f.text_field :phone %></div>
  </div>
  <div class="frow">
    <div><img alt="" title="" src="/assets/user-images/spacer.png" /></div>
    <div><input type="submit" title="Submit" value="Submit" /></div>
  </div>
<% end %>
<script>
  $("#calendar").datepicker({
    dateFormat: 'dd-mm-yy',
    changeMonth: true,
    changeYear: true,
    maxDate: 0
  });
</script>
