<div class="content">
  <div id="leftColumn">
    <ul class="list-menuLeft">
      <li class="<%= params[:cause] == "Animal Cause" ? "active" : "" %>"><%= link_to "Animal Cause", all_causes_path(:cause => "Animal Cause") %></li>
      <li class="<%= params[:cause] == "Human Cause" ? "active" : "" %>"><%= link_to "Human Cause", all_causes_path(:cause => "Human Cause") %></li>
      <li class="<%= params[:cause] == "Environment Cause" ? "active" : "" %>"><%= link_to "Environment Cause", all_causes_path(:cause => "Environment Cause") %></li>
    </ul>
    <div class="menu-categories">
      <h1><span>Categories</span></h1>
      <ul>
        <% Category.all.each do |category| %>
          <li><%= link_to category.name, category_path(:categories => category.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div id="rightColumn">
    <div class="box-trending">
      <h4>Trending</h4>
      <ul class="list-trending">
        <li><a title="Burma Python Preservation" href="#">Burma Python Preservation</a></li>
        <li><a title="Alp Leopard" href="#">Alp Leopard</a></li>
        <li><a title="Alpine Buffalo" href="#">Alpine Buffalo</a></li>
        <li><a title="Ants" href="#">Ants</a></li>
        <li><a title="Lewa Wildlife Foundation" href="#">Lewa Wildlife Foundation</a></li>
      </ul>
    </div>
    <ul id="collexp" class="menu-collexp">
      <% ses = ('A'..'Z') %>
      <% for ss in ses %>
        <li><a href="javascript:;" class="collapsed" title="<%= ss %>"><%= ss %></a>
          <ul class="list-trending">
            <% Product.where("non_profit_cause = '#{params[:cause]}' and cause_sub_category LIKE '#{ss}%'").each do |a| %>
              <li><%= link_to a.cause_sub_category, " " %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="clearFix"></div>
</div>