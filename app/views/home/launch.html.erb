    <%= stylesheet_link_tag '/assets/demo/main.css' %>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js",
      "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js","/assets/demo/countdown.js" %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <script type="text/javascript">
      $(document).ready(function() {

        $("#countdown").countdown({
          date: "01 January 2014 00:00:00", // add the countdown's end date (i.e. 25 January 2014 08:00:00)
          format: "on" // on (03:07:52) | off (3:7:52) - two_digits set to ON maintains layout consistency
        },
        function() {

          // the code here will run when the countdown ends
          alert("We welcome you to enods!")

        });
      });
    </script>
