                    js.src = p + "://platform.twitter.com/widgets.js";
                    fjs.parentNode.insertBefore(js, fjs);
                  }
                }(document, "script", "twitter-wjs");</script>
              <!-- <div id="tweets"> -->
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
    </div>
    <div class="footer">
      <div>
        <ul>
          <li><%= link_to "Home", root_path, :target => '_blank' %></li>
          <li><%= link_to "Contact", "mailto:info@enods.com", :target => '_blank' %></li>
          <li><%= link_to "Twitter", "http://www.twitter.com/enodsnow", :target => '_blank' %></li>
          <li><%= link_to "Facebook", "http://www.facebook.com/enodsnow", :target => '_blank' %></li>
          <li><%= link_to "Google+", "https://plus.google.com/112658935784152892399/posts", :target => '_blank' %></li>
        </ul>
